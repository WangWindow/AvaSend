<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaSend.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaSend.Views.ReceiveView"
             x:DataType="vm:ReceiveViewModel">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!-- 图标 -->
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20" Grid.Row="0">
      <Image Source="/Assets/avalonia-logo.ico" Width="100" Height="100" x:Name="IconImage" />
    </StackPanel>

    <!-- 滑动按钮 -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Grid.Row="1" Margin="0,20,0,20">
      <TextBlock Text="启用动画" VerticalAlignment="Center" />
      <ToggleSwitch IsChecked="{Binding IsAnimationEnabled}" />
    </StackPanel>
  </Grid>
</UserControl>
